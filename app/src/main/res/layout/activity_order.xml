<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_span="3">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blush"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:stretchColumns="100">

        <TableRow
            android:id="@+id/row0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/btnLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="#00FFFFFF"
                android:fontFamily="@font/montserrat"
                android:insetRight="20dp"
                android:maxWidth="120dp"
                android:singleLine="true"
                android:text="@string/language"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textColor="#22223B"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@drawable/rounded_textview_blush">

            <TextView
                android:id="@+id/customerTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_span="4"
                android:layout_weight="100"
                android:fontFamily="@font/montserrat"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/customer"
                android:textColor="@color/dark_purple"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="5dp">

            <LinearLayout
                android:id="@+id/vertical2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="100"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/nameTV"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/name"
                    android:textAlignment="textEnd"
                    android:textColor="@color/dark_purple"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/textName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:text="@string/blank"
                    android:textColor="@color/cream"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp">

            <LinearLayout
                android:id="@+id/vertical3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="100"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/phoneTV"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/phone"
                    android:textAlignment="textEnd"
                    android:textColor="@color/dark_purple"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/textPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:text="@string/blank"
                    android:textColor="@color/cream"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@drawable/rounded_textview_blush">

            <TextView
                android:id="@+id/sizeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_span="4"
                android:layout_weight=".2"
                android:fontFamily="@font/montserrat"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/size"
                android:textColor="@color/dark_purple"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp">

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="25"
                    android:buttonTint="@color/blush_purple"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/sm"
                    android:textColor="@color/dark_purple"
                    android:textSize="14sp"
                    android:theme="@style/radioButtonStyle"
                    app:useMaterialThemeColors="false"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/radioMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="25"
                    android:buttonTint="@color/blush_purple"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/med"
                    android:textColor="@color/dark_purple"
                    android:theme="@style/radioButtonStyle"
                    app:useMaterialThemeColors="false"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/radioLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="25"
                    android:buttonTint="@color/blush_purple"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/l"
                    android:textColor="@color/dark_purple"
                    android:theme="@style/radioButtonStyle"
                    app:useMaterialThemeColors="false"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/radioXlarge"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="25"
                    android:buttonTint="@color/blush_purple"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/xl"
                    android:textColor="@color/dark_purple"
                    android:theme="@style/radioButtonStyle"
                    app:useMaterialThemeColors="false"
                    tools:ignore="TouchTargetSizeCheck" />
            </RadioGroup>

        </TableRow>

        <TableRow
            android:id="@+id/row6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@drawable/rounded_textview_blush">

            <TextView
                android:id="@+id/toppingsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_span="4"
                android:layout_weight="100"
                android:fontFamily="@font/montserrat"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/toppings"
                android:textColor="@color/dark_purple"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
