            android:id="@+id/row12"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/vertical12_1"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="100"
