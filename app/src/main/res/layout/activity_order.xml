                        android:layout_height="wrap_content"
                        android:layout_weight="16" />

                    <ImageButton
                        android:id="@+id/normalPepper"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/blush"
                        android:contentDescription="@string/normal"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/normal_selected"
                        tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />

                    <ImageButton
                        android:id="@+id/doublePepper"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/blush"
                        android:contentDescription="@string/dbl"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/double_deselected"
                        tools:ignore="TouchTargetSizeCheck" />

                    <ImageButton
                        android:id="@+id/triplePepper"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/blush"
                        android:contentDescription="@string/triple"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/triple_deselected"
                        tools:ignore="TouchTargetSizeCheck" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnMushroom"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />

                    <ImageButton
                        android:id="@+id/normalMushroom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/blush"
                        android:contentDescription="@string/normal"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/normal_selected"
                        tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />

                    <ImageButton
                        android:id="@+id/doubleMushroom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/blush"
                        android:contentDescription="@string/dbl"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/double_deselected"
                        tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />

                    <ImageButton
                        android:id="@+id/tripleMushroom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/blush"
                        android:contentDescription="@string/triple"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/triple_deselected"
                        tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="16" />
                </LinearLayout>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/row11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <CheckBox
                android:id="@+id/checkPepperoni"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:theme="@style/checkBoxStyle"
