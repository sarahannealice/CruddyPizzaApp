                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSausage"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10" />

                    <ImageButton
                        android:id="@+id/normalSausage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/blush"
                        android:contentDescription="@string/normal"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/normal_selected"
                        tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />

                    <ImageButton
                        android:id="@+id/doubleSausage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/blush"
                        android:contentDescription="@string/dbl"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/double_deselected"
                        tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />

                    <ImageButton
                        android:id="@+id/tripleSausage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:adjustViewBounds="true"
                        android:backgroundTint="@color/blush"
                        android:contentDescription="@string/triple"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/triple_deselected"
                        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="16" />
                </LinearLayout>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/row13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <CheckBox
                android:id="@+id/checkHam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:theme="@style/checkBoxStyle"
                android:fontFamily="@font/montserrat"
                android:text="@string/ham"
                android:textColor="@color/dark_purple" />

            <CheckBox
                android:id="@+id/checkPineapple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:theme="@style/checkBoxStyle"
                android:fontFamily="@font/montserrat"
                android:text="@string/pineapple"
                android:textColor="@color/dark_purple" />
        </TableRow>

        <TableRow
            android:id="@+id/row14"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/vertical14_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
